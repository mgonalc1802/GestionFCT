<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Gestión FCT{% endblock %}</title>
        <link rel = "icon" type = 'png' href = "images/decorativas/logo.png">
        {% block stylesheets %}
            <link rel="website icon" type = 'png' href = "images/decorativas/logo.png">
            <link rel = "stylesheet" href = "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
            <link rel = "stylesheet" href = "{{ asset('css/estilo/base.css') }}">
        
            <script src = "https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
            <script src = "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
            <script src = "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href = ""><img src="{{ asset('images/decorativas/logo.png') }}" weight = "50" height = "50"/></a>
                <a class="navbar-brand" href = ""><img src="{{ asset('images/decorativas/logoLetra.png') }}" weight = "40" height = "40"/></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                        </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin') }}">Admin</a>
                        </li>
                    {% endif %}
                    {% if  is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') or is_granted('ROLE_GUIA') %}
                        <li class="nav-item">
                            <a class="nav-link" href="">Mis Reservas</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_PROFESOR') %}
                        <li class="nav-item">
                            <a class="nav-link" href="">Generar Informe</a>
                        </li>
                    {% endif %}

                    </ul>

                    <ul class = "navbar-nav ml-auto">
                        <li class ="nav-item">
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') or is_granted('ROLE_GUIA') %}
                                <span class = "nombreUser">{{ app.user.nombre }} </span> 
                        </li>
                        <li class = "nav-item">
                                <a href="/logout" class = "nav-link">Cerrar Sesión</a>
                        </li>
                        <li class = "nav-item">
                            {% else %}
                                <a href="/login" id = "ini" class = "nav-link">Iniciar Sesión</a>
                        </li>
                        <li class = "nav-item">
                                <a href="" id = "btnReg" class = "nav-link">Regístrate</a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        
        
        {% block body %}{% endblock %}

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-xl-7 col-sm-9">
                        <h5>Contacto</h5>
                        <p>Email: info@tufreetour.com</p>
                        <p>Teléfono: +123456789</p>
                    </div>
                    <div class="col-xl-5 col-sm-3">
                        <h5>Síguenos en Redes Sociales</h5>
                        <ul class="list-unstyled">
                            <li><a href="#">Facebook</a></li>
                            <li><a href="#">Twitter</a></li>
                            <li><a href="#">Instagram</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
